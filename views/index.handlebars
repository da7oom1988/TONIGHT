<h2 class="page-header">TONIGHT</h2>
<h4>Welcome to your TONIGHT</h4>  
<br><br>
<label>Location</label>
<form method="POST" action="/search">
   <div class="input-group">
      <input name="location" type="text" class="form-control" placeholder="Search for..." required >
      <span class="input-group-btn">
        <button class="btn btn-default" type="submit" >Go!</button>
      </span>
    </div>
</form>
{{#if error}}

{{else}}
    {{#each places}}
        <div class="show row">
            <div class="col-xs-3">
                <img src="{{this.image_url}}" alt="{{this.name}}">
            </div>
            <div class="col-xs-6">
                 <h3><a href="{{this.url}}"> {{this.name}}</a></h3> <br />
                <span>Rating:{{this.rating}}</span>
                <br />
                <span>Price: {{this.price}}</span>
                <br />
            </div>
            <div class="col-xs-3">
                <button class="btn {{go this.arr this.id}}" id="{{this.id}}" onclick="going('{{this.id}}')">Going</button>
                <a class="btn btn-info" href="/isthere/{{this.id}}">Who is there?</a>
            </div>  
        </div>
    {{/each}}
{{/if}}
